#!name=Bilibili
#!desc=Bilibili去广告&精简我的界面.

[MITM]
hostname = %APPEND% app.bilibili.com, grpc.biliapi.net

[Script]
http-response ^https:\/\/app\.bilibili\.com\/x\/(v2\/(splash\/(list|show)|feed\/index\?)|resource\/show\/tab\/v2),requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Echo-FL/Surge/master/Script/Bilibili/bilibili-json.js
http-response ^https:\/\/app\.bilibili\.com\/bilibili\.app\.(view\.v1\.View\/View|dynamic\.v2\.Dynamic\/DynAll)$,requires-body=1,binary-body-mode=1,max-size=0,script-path=https://raw.githubusercontent.com/Echo-FL/Surge/master/Script/Bilibili/bilibili-proto.js
http-response ^https://app\.bilibili\.com/x/v2/account/mine\?access_key requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Echo-FL/Surge/master/Script/Bilibili/bilibili_mine.js
